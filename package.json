{
  "name": "eSearch",
  "version": "1.7.4",
  "description": "识屏 · 搜索",
  "main": "main.js",
  "scripts": {
    "rebuild": "electron-rebuild -f -w",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -p never"
  },
  "author": {
    "name": "xsf",
    "email": "xushengfeng_zg@163.com"
  },
  "homepage": "https://github.com/xushengfeng/eSearch/",
  "license": "GPL-3.0",
  "dependencies": {
    "@ffmpeg/core": "^0.11.0",
    "@ffmpeg/ffmpeg": "^0.11.1",
    "color": "^4.2.3",
    "electron-store": "^8.0.1",
    "grapheme-splitter": "^1.0.4",
    "hotkeys-js": "^3.9.0",
    "jsqr": "^1.4.0",
    "onnxruntime-node": "^1.12.0",
    "opencv.js": "^1.2.1",
    "robotjs": "^0.6.0",
    "uiohook-napi": "^1.2.0"
  },
  "devDependencies": {
    "download": "^8.0.0",
    "electron": "^19.0.10",
    "electron-builder": "^23.1.0",
    "electron-rebuild": "^3.2.8",
    "node-abi": "^3.22.0"
  },
  "rebuild": "npm rebuild --runtime=electron --target=19.0.10 --disturl=https://atom.io/download/atom-shell --abi=103",
  "build": {
    "appId": "com.esearch.app",
    "directories": {
      "output": "build"
    },
    "compression": "maximum",
    "icon": "./assets/logo",
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "npmRebuild": false,
    "fileAssociations": [
      {
        "ext": [
          "png",
          "jpg",
          "svg"
        ],
        "mimeType": "image/png;image/jpg;image/svg",
        "role": "Editor"
      }
    ],
    "asar": false,
    "beforePack": "./before_pack.js",
    "linux": {
      "category": "Utility",
      "target": [
        "tar.gz",
        "deb",
        "rpm"
      ],
      "files": [
        "!.vscode",
        "!.github",
        "!assets/logo/icon.icns",
        "!assets/logo/icon.ico",
        "!src",
        "!node_modules/onnxruntime-node/bin/napi-v3/win32",
        "!node_modules/onnxruntime-node/bin/napi-v3/darwin"
      ]
    },
    "mac": {
      "files": [
        "!lib/gtk-open-with",
        "!lib/kde-open-with",
        "!.vscode",
        "!.github",
        "!assets/logo/1024x1024.png",
        "!assets/logo/512x512.png",
        "!assets/logo/icon.ico",
        "!src",
        "!node_modules/onnxruntime-node/bin/napi-v3/win32",
        "!node_modules/onnxruntime-node/bin/napi-v3/linux"
      ]
    },
    "win": {
      "icon": "./assets/logo/icon.ico",
      "target": [
        "nsis",
        "zip"
      ],
      "files": [
        "!lib/gtk-open-with",
        "!lib/kde-open-with",
        "!.vscode",
        "!.github",
        "!assets/logo/icon.icns",
        "!assets/logo/1024x1024.png",
        "!assets/logo/512x512.png",
        "!src",
        "!node_modules/onnxruntime-node/bin/napi-v3/linux",
        "!node_modules/onnxruntime-node/bin/napi-v3/darwin"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
