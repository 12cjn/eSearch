{
  "name": "eSearch",
  "version": "1.3.0",
  "description": "识屏 · 搜索",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "rebuild": "electron-rebuild -f -w "
  },
  "author": {
    "name": "xsf",
    "email": "xushengfeng_zg@163.com"
  },
  "homepage": "https://xushengfeng.github.io/eSearch-website/",
  "license": "GPL3",
  "dependencies": {
    "color": "^4.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.1",
    "hotkeys-js": "^3.8.7",
    "jsqr": "^1.4.0",
    "open": "^8.4.0",
    "robotjs": "^0.6.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "^16.0.5",
    "electron-rebuild": "^3.2.5",
    "yarn": "^1.22.17"
  },
  "rebuild": "npm rebuild --runtime=electron --target=16.0.5 --disturl=https://atom.io/download/atom-shell --abi=99",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/icons/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "name": "esearch",
            "productName": "eSearch",
            "categories": [
              "Graphics",
              "System",
              "Utility"
            ],
            "icon": "assets/icons/1024x1024.png"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "name": "esearch",
            "productName": "eSearch",
            "categories": [
              "Graphics",
              "System",
              "Utility"
            ],
            "icon": "assets/icons/1024x1024.png"
          }
        }
      ]
    }
  }
}
